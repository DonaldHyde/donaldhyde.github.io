@import url('https://fonts.googleapis.com/css2?family=Lobster&family=Ubuntu+Mono:ital,wght@0,400;0,700;1,400;1,700&display=swap');

body
  position absolute
  margin 0
  padding 0
  top 0
  left 0
  right 0
  bottom 0
  background #303030
  color #dedede
  font-family "Ubuntu Mono"

section#hero
  background center / contain url("../images/kelly-sikkema-AcVE-s4sATw-unsplash.jpg")
  background-repeat no-repeat
  background-position center
  background-size cover
  position absolute
  margin 0
  padding 0
  top 0
  left 0
  right 0
  bottom 0

  .scrim
    background #000000
    backdrop-filter blur(5px)
    opacity 0.7
    position absolute
    height 100%
    width 100%

  .title
    position relative
    padding 150px 0px 0px 10px

    h1
      font-size 36px
      font-weight 400
      margin 0 0 10px 0
      font-family lobster

      span
        color #0a7bff

    h2
      font-size 16px
      font-weight 400
      margin 0

footer
  position absolute
  bottom 0
  left 0
  right 0
  height 50px
  background #dedede
  text-align center
  line-height 50px

  a
    text-decoration none
    color #303030
    font-size 24px
    margin 0 13px

    &:hover
      color #0a7bff


